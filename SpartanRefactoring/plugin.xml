   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="il.ac.technion.cs.ssdl.spartan.commandhandlers.ToggleSpartanizationHandler"
            commandId="il.ac.technion.cs.ssdl.spartan.commands.ToggleCommand">
      </handler>
      <handler
            class="il.ac.technion.cs.ssdl.spartan.commandhandlers.ChangeReturnToDollarHandler"
            commandId="il.ac.technion.cs.ssdl.spartan.refactoring.commands.ChangeReturnToDollar">
      </handler>
      <handler
            class="il.ac.technion.cs.ssdl.spartan.commandhandlers.TernarizeHandler"
            commandId="il.ac.technion.cs.ssdl.spartan.refactoring.commands.ConvertToTernary">
