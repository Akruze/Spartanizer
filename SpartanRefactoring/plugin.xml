   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="il.ac.technion.cs.ssdl.spartan.menus.spartanization"
               label="Spartanization"
               mnemonic="S">
            <command
                  commandId="il.ac.technion.cs.ssdl.spartan.commands.ToggleCommand"
                  id="il.ac.technion.cs.ssdl.spartan.menus.toggleCommand"
                  label="Disable Spartanization Suggestions"
                  mnemonic="S">
               <visibleWhen>
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="il.ac.technion.cs.ssdl.spartan.Nature">
                        </test>
                     </adapt>
                  </iterate>
               </visibleWhen>
            </command>
            <command
                  commandId="il.ac.technion.cs.ssdl.spartan.commands.ToggleCommand"
                  id="il.ac.technion.cs.ssdl.spartan.menus.toggleCommand"
                  label="Enable Spartanization Suggestions"
                  mnemonic="S">
               <visibleWhen>
                  <not>
                     <iterate
                           ifEmpty="true"
                           operator="and">
                        <adapt
                              type="org.eclipse.core.resources.IResource">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="il.ac.technion.cs.ssdl.spartan.Nature">
                           </test>
                        </adapt>
                     </iterate>
                  </not>
               </visibleWhen>
            </command>
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                  </adapt>
               </iterate>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?before=navigate">
         <menu
               id="org.eclipse.jdt.ui.refactoring.menu"
               label="Refactor">
