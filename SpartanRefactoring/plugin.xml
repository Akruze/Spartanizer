         point="org.eclipse.ui.commands">
      <category
            id="org.spartan.commands.category"
            name="Spartanization Category">
      </category>
      <command
            categoryId="org.spartan.commands.category"
            id="org.spartan.commands.ToggleCommand"
            name="Toggle Automatic Spartanization Suggestion">
      </command>
      <category
            id="org.spartan.refactoring.category"
            name="Spartan Refactoring">
      </category>
      <command
            categoryId="org.spartan.refactoring.category"
            id="org.spartan.refactoring.commands.ChangeReturnToDollar"
            name="Change return variable to $">
      </command>
      <command
            categoryId="org.spartan.refactoring.category"
            id="org.spartan.refactoring.commands.ConvertToTernary"
            name="Convert conditional to ternary">
      </command>
      <command
            categoryId="org.spartan.refactoring.category"
            id="org.spartan.refactoring.commands.ShortestOperand"
            name="Shortest operand first">
      </command>
      <command
            categoryId="org.spartan.refactoring.category"
            id="org.spartan.refactoring.commands.ForwardDeclaraion"
            name="Forward declaration">
      </command>
      <command
            categoryId="org.spartan.refactoring.category"
            id="org.spartan.refactoring.commands.InlineSingleUse"
            name="Inline single use">
      </command>
      <command
            categoryId="org.spartan.refactoring.category"
            id="org.spartan.refactoring.commands.RedundantEquality"
            name="Redandant equality">
      </command>
      <command
            categoryId="org.spartan.refactoring.category"
            id="org.spartan.refactoring.commands.ShortestBranchFirst"
            name="Shortest branch first">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.spartan.refactoring.commandhandlers.ToggleSpartanizationHandler"
            commandId="org.spartan.commands.ToggleCommand">
      </handler>
      <handler
            class="org.spartan.refactoring.commandhandlers.ChangeReturnToDollarHandler"
            commandId="org.spartan.refactoring.commands.ChangeReturnToDollar">
      </handler>
      <handler
            class="org.spartan.refactoring.commandhandlers.TernarizeHandler"
