            commandId="org.spartan.refactoring.commands.InlineSingleUse">
      </handler>
      <handler
            class="org.spartan.refactoring.commandhandlers.RedundantEqualityHandler"
            commandId="org.spartan.refactoring.commands.RedundantEquality">
      </handler>
      <handler
            class="org.spartan.refactoring.commandhandlers.ShortestBranchFirstHandler"
            commandId="org.spartan.refactoring.commands.ShortestBranchFirst">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
